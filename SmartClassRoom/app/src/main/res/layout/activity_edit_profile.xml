<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/main_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/cover"
        android:adjustViewBounds="true"
        android:scaleType="fitXY">
    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/edit_profile"
            android:padding="18dp"
            android:background="@drawable/round_background"
            android:layout_marginBottom="-60dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/main_box">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/edit_profile"
                android:padding="18dp"
                android:background="@drawable/round_background"
                android:layout_marginTop="-60dp">
            </ImageView>
            <EditText
                android:id="@+id/editprofile_usernameText"
                android:layout_width="320dp"
                android:layout_height="50dp"

                android:background="@drawable/input_field_back"
                android:drawableLeft="@drawable/ic_person"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:drawablePadding="-30dp"

                android:hint="Username"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            </LinearLayout>
            <EditText
                android:id="@+id/editprofile_passwordText"
                android:layout_width="320dp"
                android:layout_height="50dp"

                android:background="@drawable/input_field_back"
                android:drawableLeft="@drawable/ic_pass"
                android:gravity="center"
                android:drawablePadding="-30dp"
                android:inputType="textPassword"

                android:hint="Password"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            </LinearLayout>
            <EditText
                android:id="@+id/editprofile_roomText"
                android:layout_width="320dp"
                android:layout_height="50dp"

                android:background="@drawable/input_field_back"
                android:drawableLeft="@drawable/ic_room"
                android:gravity="center"
                android:drawablePadding="-30dp"

                android:hint="Room"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            </LinearLayout>

            <Button
                android:id="@+id/editprofile_goButton"
                android:layout_width="180dp"
                android:layout_height="50dp"

                android:background="@drawable/button_disabled"
                android:layout_marginTop="10dp"
                android:enabled="false"

                android:text="Go"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/editprofile_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_pass"
                android:gravity="center"
                android:background="@drawable/input_field_back"

                android:hint="Enter old password"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
            </LinearLayout>
            <Button
                android:id="@+id/editprofile_submitButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/button_disabled"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"

                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp">
            </Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>