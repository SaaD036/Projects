<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Pass"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/cover"
        android:adjustViewBounds="true"
        android:scaleType="centerInside">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/forgotpass"
            android:background="@drawable/round_background"
            android:padding="23dp"
            android:layout_marginBottom="-59dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/main_box">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/forgotpass"
                android:background="@drawable/round_background"
                android:padding="23dp"
                android:layout_marginTop="-61dp">
            </ImageView>
            <EditText
                android:id="@+id/forgotPassEmailText"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/input_field_back"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_email"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="-15dp"

                android:hint="Enter email"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            </LinearLayout>
            <Button
                android:id="@+id/forgotPassSubmitButton"
                android:layout_width="180dp"
                android:layout_height="50dp"

                android:gravity="center"
                android:background="@drawable/button_disabled"
                android:layout_marginTop="15dp"
                android:enabled="false"

                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/forgotpass_confirmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                android:textSize="16dp"
                android:textColor="#003380">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgotpass_verficationInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <EditText

                android:id="@+id/forgotpass_verificationcodeText"
                android:layout_width="300dp"
                android:layout_height="60dp"

                android:background="@drawable/input_field_back"
                android:gravity="center"
                android:drawableLeft="@mipmap/verification_user"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="-15dp"

                android:hint="Enter verification code"
                android:textColor="#003380"
                android:textColorHint="#3385ff"
                android:textSize="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0000cc"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
            </LinearLayout>
            <Button
                android:id="@+id/forgotpass_goButton"
                android:layout_width="180dp"
                android:layout_height="50dp"

                android:gravity="center"
                android:background="@drawable/button_disabled"
                android:layout_marginTop="15dp"
                android:enabled="false"

                android:text="Go"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="#ffffff">

            </Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>