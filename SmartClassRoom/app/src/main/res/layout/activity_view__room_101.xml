<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Room_101"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#c9d0d1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/view_class">

        <ImageButton
            android:id="@+id/viewclass101MenuButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/menubar"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_marginRight="155dp"
            android:background="#c9d0d1">
        </ImageButton>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="-10dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/view_class">

        <TextView
            android:id="@+id/userView101"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#290606"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/input_field_back"
            android:layout_marginLeft="-10dp"/>
        <TextView
            android:id="@+id/statusView101"
            android:layout_width="120dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="#290606"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_field_back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:background="@drawable/accessclass101status"
                android:orientation="vertical"
                android:layout_marginRight="3dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/fan"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/viewClass101View2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/accessclass101onoffbutton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:background="@drawable/accessclass101status"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/light"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/viewClass101View4"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/accessclass101onoffbutton"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:background="@drawable/accessclass101status"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/light"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/viewClass101View6"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/accessclass101onoffbutton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:background="@drawable/accessclass101status"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/fan"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/viewClass101View8"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/accessclass101onoffbutton"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Log Out"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/loginbutton"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20dp"/>

</LinearLayout>