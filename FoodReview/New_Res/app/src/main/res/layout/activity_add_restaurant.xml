<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurant"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@mipmap/addr_es_cover"
        android:adjustViewBounds="true"
        android:scaleType="fitXY">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/addRestaurent_UserImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="50dp">
        </ImageView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/rest_owner">
            </ImageView>
            <TextView
                android:id="@+id/addRestaurent_usernameText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/username_textview"
                android:gravity="center"

                android:textColor="#ffffff"
                android:textSize="16dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/login_box">

        <EditText
            android:id="@+id/addRestaurant_restaurantText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/login_edittext"
            android:drawableLeft="@drawable/restaurant_edittext"
            android:drawablePadding="-25dp"

            android:hint="Restaurant name"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="15dp">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#040BFA"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp">
        </LinearLayout>
        <EditText
            android:id="@+id/addRestaurant_addressText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_edittext"
            android:drawableLeft="@drawable/restaurant"
            android:drawablePadding="-25dp"

            android:hint="Address"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="15dp">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#040BFA"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp">
        </LinearLayout>

        <Button
            android:id="@+id/addRestaurent_addButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/login_button"
            android:layout_marginTop="15dp"

            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17dp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/addRestaurant_logoutButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button"

            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16dp">
        </Button>
        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"></TextView>
        <Button
            android:id="@+id/addRestaurant_gotouserButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button"

            android:text="Go to user mode"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16dp">
        </Button>

    </LinearLayout>

</LinearLayout>