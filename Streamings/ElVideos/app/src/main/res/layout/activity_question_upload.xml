<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionUpload"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:src="@mipmap/quiz"
        android:padding="10dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <EditText
            android:id="@+id/quesUpload_quesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:background="@drawable/input"
            android:padding="15dp"

            android:hint="Question"
            android:textSize="16dp"
            android:textColor="#000">
        </EditText>
        <EditText
            android:id="@+id/quesUpload_op1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:hint="Option 1"
            android:textSize="15dp"
            android:textColor="#024FE4"
            android:textColorHint="#024FE4">
        </EditText>
        <EditText
            android:id="@+id/quesUpload_op2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:hint="Option 2"
            android:textSize="15dp"
            android:textColor="#024FE4"
            android:textColorHint="#024FE4">
        </EditText>
        <EditText
            android:id="@+id/quesUpload_op3Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:hint="Option 3"
            android:textSize="15dp"
            android:textColor="#024FE4"
            android:textColorHint="#024FE4">
        </EditText>
        <EditText
            android:id="@+id/quesUpload_op4Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:hint="Option 4"
            android:textSize="15dp"
            android:textColor="#024FE4"
            android:textColorHint="#024FE4">
        </EditText>
        <EditText
            android:id="@+id/quesUploadansText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:inputType="number"

            android:hint="Answer"
            android:textSize="15dp"
            android:textColor="#024FE4"
            android:textColorHint="#024FE4">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"

            android:text="Enter 1 for first option, 2 for second\nand so on..."
            android:textColor="#000"
            android:textSize="17dp">
        </TextView>

        <Button
            android:id="@+id/quesUpload_uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/button"

            android:text="Upload"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textAllCaps="false">
        </Button>

    </LinearLayout>

</LinearLayout>