<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizPage"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:src="@mipmap/quiz">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizPage_quesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"

            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#F30505">
        </TextView>

        <Button
            android:id="@+id/quizPage_op1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/input"

            android:textColor="#000"
            android:textSize="16dp"
            android:textAllCaps="false">
        </Button>
        <Button
            android:id="@+id/quizPage_op2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/input"

            android:textColor="#000"
            android:textSize="16dp"
            android:textAllCaps="false">
        </Button>
        <Button
            android:id="@+id/quizPage_op3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/input"

            android:textColor="#000"
            android:textSize="16dp"
            android:textAllCaps="false">
        </Button>
        <Button
            android:id="@+id/quizPage_op4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/input"

            android:textColor="#000"
            android:textSize="16dp"
            android:textAllCaps="false">
        </Button>

        <TextView
            android:id="@+id/quizPage_statText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"

            android:textSize="17dp"
            android:textColor="#000">
        </TextView>

    </LinearLayout>

</LinearLayout>